<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_schedaFilm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CineMates.SchedaFilmActivity"
    android:background="@color/colorBack">

    <TextView
        android:id="@+id/scrittaLogo_schedaFilm"
        android:layout_width="294dp"
        android:layout_height="83dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="@font/philosopher"
        android:text="CineMates"
        android:textColor="@color/colorIcons"
        android:textSize="64sp"
        app:layout_constraintEnd_toStartOf="@+id/homeButton_schedaFilm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homeButton_schedaFilm"
        android:layout_width="68dp"
        android:layout_height="83dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/scrittaLogo_schedaFilm"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <View
        android:id="@+id/divider_schedaFilm"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrittaLogo_schedaFilm" />

    <ImageView
        android:id="@+id/backButton_schedaFilm"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_schedaFilm"
        app:srcCompat="@mipmap/back_icon_foreground" />

    <TextView
        android:id="@+id/titoloFIlm_schedaFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="180dp"
        android:fontFamily="@font/martel_sans_bold"
        android:text="Titolo del film"
        android:ellipsize="marquee"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/backButton_schedaFilm"
        app:layout_constraintTop_toBottomOf="@+id/divider_schedaFilm" />

    <ImageView
        android:id="@+id/locandinaFilm_schedaFilm"
        android:layout_width="170dp"
        android:layout_height="300dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titoloFIlm_schedaFilm"
        app:srcCompat="@mipmap/profile_pic" />


    <TextView
        android:id="@+id/registaFilm_schedaFilm_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/martel_sans_bold"
        android:text="Regista:"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/locandinaFilm_schedaFilm"
        app:layout_constraintTop_toBottomOf="@+id/titoloFIlm_schedaFilm" />

    <TextView
        android:id="@+id/genereFilm_schedaFilm_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/martel_sans_bold"
        android:text="Genere:"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/locandinaFilm_schedaFilm"
        app:layout_constraintTop_toBottomOf="@+id/registaFilm_schedaFilm_textView" />

    <ImageView
        android:id="@+id/stella_schedaFilm_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/votoApp_textView"
        app:layout_constraintStart_toEndOf="@+id/locandinaFilm_schedaFilm"
        app:layout_constraintTop_toBottomOf="@+id/genereFilm_schedaFilm_textView"
        app:srcCompat="@drawable/ic_stella" />

    <TextView
        android:id="@+id/maxVotoFilm_schedaFilm_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="121dp"
        android:fontFamily="@font/martel_sans_bold"
        android:text="/10"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genereFilm_schedaFilm_textView" />

    <TextView
        android:id="@+id/aggiungiFilm_schedaFilm_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/martel_sans_bold"
        android:text="Aggiungi alla lista preferiti"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/locandinaFilm_schedaFilm"
        app:layout_constraintTop_toBottomOf="@+id/maxVotoFilm_schedaFilm_textView" />

    <ImageView
        android:id="@+id/aggiungiFilm_schedaFilm_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="81dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/locandinaFilm_schedaFilm"
        app:layout_constraintTop_toBottomOf="@+id/aggiungiFilm_schedaFilm_textView"
        app:srcCompat="@drawable/ic_add_film" />

    <TextView
        android:id="@+id/nomeRegistaFilm_schedaFilm_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="62dp"
        android:fontFamily="@font/martel_sans_bold"
        android:text="Nome_Regista"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/registaFilm_schedaFilm_textView"
        app:layout_constraintTop_toBottomOf="@+id/titoloFIlm_schedaFilm" />

    <TextView
        android:id="@+id/nomeGenereFilm_schedaFilm_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/martel_sans_bold"
        android:text="Genere_Film"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/genereFilm_schedaFilm_textView"
        app:layout_constraintTop_toBottomOf="@+id/nomeRegistaFilm_schedaFilm_textView" />

    <TextView
        android:id="@+id/votoApp_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/martel_sans_bold"
        android:text="10"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/maxVotoFilm_schedaFilm_textView"
        app:layout_constraintTop_toBottomOf="@+id/genereFilm_schedaFilm_textView" />

    <TextView
        android:id="@+id/trama_schedaFilm_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="334dp"
        android:fontFamily="@font/martel_sans_bold"
        android:text="Trama: "
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locandinaFilm_schedaFilm" />

    <TextView
        android:id="@+id/tramaFilm_schedaFilm_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/martel_sans_bold"
        android:gravity="top|left"
        android:lines="5"
        android:minLines="5"
        android:scrollHorizontally="false"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trama_schedaFilm_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>