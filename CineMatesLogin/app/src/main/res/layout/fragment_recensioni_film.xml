<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBack"
    tools:context=".ui.CineMates.Fragment.RecensioniFilmFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView_recensioni_schedaFilm"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:nestedScrollingEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/textView_RecensioniVuoti_RecensioniFilm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Non sono presenti recensioni per questo film."
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:visibility="invisible"/>


    <com.shamanland.fab.FloatingActionButton
        android:id="@+id/recensioneButton_RecensioniFilmFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_aggiungi"
        app:floatingActionButtonColor="@color/biancoGhiaccio"
        app:floatingActionButtonImplicitElevation="false"
        app:floatingActionButtonSize="normal"
        app:layout_constraintBottom_toBottomOf="@+id/recycleView_recensioni_schedaFilm"
        app:layout_constraintEnd_toEndOf="@+id/recycleView_recensioni_schedaFilm" />
</androidx.constraintlayout.widget.ConstraintLayout>