<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androandroid="http://schemas.android.com/tools"
    xmlns:id="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_notifiche_dialog"
    android:layout_width="match_parent"
    android:layout_height="460dp"
    android:layout_gravity="center"
    android:background="@color/colorBack">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Richieste_Dialog"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        id:layout_constraintBottom_toBottomOf="parent"
        id:layout_constraintEnd_toEndOf="parent"
        id:layout_constraintHorizontal_bias="0.0"
        id:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/richieste_amicizia_NotificheDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/martel_sans_bold"
        android:text="Richieste di amicizia"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        id:layout_constraintBottom_toTopOf="@+id/Richieste_Dialog"
        id:layout_constraintEnd_toEndOf="parent"
        id:layout_constraintStart_toStartOf="parent"
        id:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chiudi_finestra_notificheDialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        id:layout_constraintEnd_toEndOf="parent"
        id:layout_constraintTop_toTopOf="parent"
        id:srcCompat="@drawable/ic_chiudifinestra" />

</androidx.constraintlayout.widget.ConstraintLayout>